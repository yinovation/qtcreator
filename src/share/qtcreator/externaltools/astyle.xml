<?xml version="1.0" encoding="UTF-8"?>
<externaltool id="astyle">
    <description>A Free, Fast and Small Automatic Formatter for C/C++ Source Code</description>
    <displayname>Artistic Style</displayname>
    <category>Code</category>
    <executable output="replaceselection" error="showinpane" modifiesdocument="no">
        <path>AStyle</path>
        <arguments>--style=break --attach-namespaces --indent-preproc-block --indent-preproc-define --min-conditional-indent=0 --max-continuation-indent=80 --break-blocks --pad-oper --pad-header --unpad-paren --align-pointer=type --align-reference=type --break-one-line-headers --add-braces --convert-tabs --close-templates --max-code-length=100 --suffix=none</arguments>
        <input>%{CurrentDocument:Selection}</input>
        <workingdirectory>%{CurrentDocument:Path}</workingdirectory>
    </executable>
</externaltool>
